sudo wifi-menu

cfdisk /dev/sda
/dev/sda1 - Bootabel
/dev/sda2 - Linux swap
/dev/sda3

mkfs.ext4 /dev/sda1
mkswap /dev/sda2 
swapon /dev/sda2 
mkfs.ext4 /dev/sda3

mount /dev/sda3 /mnt
mkdir /mnt/boot /mnt/home /mnt/var
mount /dev/sda1 /mnt/boot 

pacstarp /mnt base base-devel
pacstarp /mnt grup-bios
genfstab -P /mnt >> /mnt/etc/fstab

arch-chroot /mnt 
hwclock --sysohc -utc
mkinitcpio -p linux
passwd root
useradd -mg users -G wheel -S /bin/bash <userName>
passwd <userName>
grub-install /dev/sda 
grub-mkconfig -o /boot/grub/grub.cfg
pacman -S dialog
exit
reboot

hostnamectl set-hostname <nameYourMachine>
